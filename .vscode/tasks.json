{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "yarn: watch",
			"command": "yarn",
			"args": ["watch"],
			"problemMatcher": "$ts-webpack-watch",
			"isBackground": true,
			"presentation": {
				"reveal": "never",
				"group": "watchers"
			},
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"type": "shell",
			"label": "yarn: watch-tests",
			"command": "yarn",
			"args": ["watch-tests"],
			"problemMatcher": "$tsc-watch",
			"isBackground": true,
			"presentation": {
				"reveal": "never",
				"group": "watchers"
			},
			"group": "build"
		},
		{
			"label": "tasks: watch-tests",
			"dependsOn": [
				"yarn: watch",
				"yarn: watch-tests"
			],
			"problemMatcher": []
		}
	]
}
